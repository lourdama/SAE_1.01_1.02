            Canvas.Top="229"
            Width="60"
            Height="60"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="Red"
            Opacity="0.5"
            Stroke="Black" />
        <Ellipse
            x:Name="ellipseNiveau3"
            Canvas.Left="370"
            Canvas.Top="199"
            Width="60"
            Height="60"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Fill="Red"
            Opacity="0.5"
            Stroke="Black" />
        <Label
            Canvas.Left="24"
            Canvas.Top="54"
            Width="229"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Choissez un niveau :"
            FontSize="22"
            FontWeight="Bold"
            Foreground="White" />
    </Canvas>

</Window>
