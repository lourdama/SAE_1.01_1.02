<Window
    x:Class="JeuxPlateformeBille.Parametres"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeuxPlateformeBille"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Parametres"
    Width="300"
    Height="400"
    mc:Ignorable="d">
    <Grid>
        <Label
            Width="108"
            Height="36"
            Margin="0,29,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Paramètres"
            FontSize="18"
            FontWeight="Bold" />
        <Label
            Margin="32,80,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="SON" />
        <Label
            Margin="32,157,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="MUSIQUE" />
        <Label
            Margin="32,236,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="CONTROLES"
            RenderTransformOrigin="0.542,0.156" />
        <Slider
            x:Name="slideBarSon"
            Width="235"
            Margin="0,119,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" />
        <Slider
            x:Name="slideBarMusique"
            Width="236"
            Margin="0,202,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" />
        <TextBox
            Width="24"
            Margin="84,303,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Z"
            TextChanged="TextBox_TextChanged"
            TextWrapping="Wrap"
            UndoLimit="1" />

    </Grid>
</Window>
