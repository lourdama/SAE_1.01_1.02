<Window
    x:Class="JeuxPlateformeBille.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeuxPlateformeBille"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="JEU"
    Title="MainWindow"
    Width="1500"
    Height="900"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Canvas x:Name="canvasMainWindow" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" MouseDown="Window_MouseDown"  Focusable="True">
        <Canvas.Background>
            <ImageBrush ImageSource="img/8-bit-graphics-pixels-scene-with-castle.jpg"/>
        </Canvas.Background>
        <ContentControl  x:Name="ControlContent">
            <local:Accueil x:Name="Control"   />
        </ContentControl>
        
        <Rectangle
            x:Name="sol"
            Canvas.Left="-53"
            Canvas.Top="747"
            Width="1606"
            Height="38"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Fill="White"
            RenderTransformOrigin="0.647,4.584"
            Stroke="White"
            Visibility="Hidden"/>
        <Rectangle
            x:Name="joueur"
            Canvas.Left="339"
            Canvas.Top="254"
            Width="16"
            Height="56"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="Red"
            Stroke="Red" Visibility="Hidden"
            />
        <Rectangle
            x:Name="barreSaut"
            Canvas.Left="0"
            Canvas.Top="14"
            Width="100"
            Height="16"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Fill="White"
            OpacityMask="White"
            Stroke="White"
            Visibility="Hidden"/>
