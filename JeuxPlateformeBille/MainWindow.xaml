            Canvas.Top="10"
            Width="790"
            Height="414"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Source="/img/8-bit-graphics-pixels-scene-with-castle.jpg"
            Stretch="Fill" />
        <Rectangle
            x:Name="sol"
            Canvas.Top="359"
            Width="282"
            Height="36"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="White"
            Stroke="White" Canvas.Left="285" />
        <Rectangle
            x:Name="joueur"
            Canvas.Left="418"
            Canvas.Top="232"
            Width="16"
            Height="56"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="Red"
            Stroke="Red" />

    </Canvas>

</Window>
